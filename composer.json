{
    "name": "radnok/cobiro-recruitment",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Konrad Alfaro",
            "email": "alfaro@hey.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Api\\": "src/Api",
            "Cobiro\\": "src/Cobiro"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pdo_pgsql": "*",
        "ext-sodium": "*",
        "aeon-php/calendar": "^0.11.0",
        "beberlei/assert": "^3.2",
        "doctrine/dbal": "^2.9",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "doctrine/migrations": "^2.1",
        "doctrine/orm": "^2.6",
        "moneyphp/money": "^3.3",
        "monolog/monolog": "^1.24",
        "psr/log": "^1.1",
        "psr/simple-cache": "^1.0",
        "ramsey/uuid": "^3.8",
        "ramsey/uuid-doctrine": "^1.5",
        "sensiolabs/security-checker": "^6.0",
        "symfony/cache": "^5.1",
        "symfony/console": "^5.1",
        "symfony/dotenv": "^5.1",
        "symfony/flex": "^1.9",
        "symfony/form": "^5.1",
        "symfony/framework-bundle": "^5.1",
        "symfony/http-kernel": "^5.1",
        "symfony/lock": "^5.1",
        "symfony/monolog-bundle": "^3.0",
        "symfony/security-csrf": "^5.1",
        "symfony/validator": "^5.1",
        "symfony/yaml": "^5.1",
        "thecodingmachine/safe": "^0.1.13"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^8.0",
        "symfony/var-dumper": "^5.1",
        "roave/security-advisories": "dev-master"
    },
    "scripts": {
        "composer:install:prod": [
            "APP_ENV=prod composer install --no-interaction --optimize-autoloader --no-dev"
        ],
        "cs:fix": [
            "php-cs-fixer fix"
        ],
        "analyse": [
            "phpstan analyse src tests bin",
            "php-cs-fixer fix -v --dry-run --using-cache=no"
        ],
        "symfony:cache:clear": "bin/console cache:clear",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        }
    },
    "config": {
        "sort-packages": true
    }
}
